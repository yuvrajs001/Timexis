@model IEnumerable<Timexis_1.Models.User>

@{ ViewBag.Title = "Index"; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-image: url('../../Image/background_Index 1.jpg');
          
            background-size: cover;
            background-position: center;
            color: white;
            margin-top: 50px;
        }

        .container {
            padding: 10px;
        }

        .table {
            width: auto;
            border-collapse: collapse;
            padding: 10px;
        }

            .table th, .table td {
                padding: 8px;
                border-bottom: 1px solid #ddd;
                text-align: left;
            }

            .table th {
                background-color: #333;
            }

            .table tr:nth-child(even) {
                background-color: #555;
            }

            .table tr:hover {
                background-color: #777;
            }

        .btn {
            background-color: #03ba82;
            color: white;
            padding: 8px 8px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #AD88C6;
            }

        .button-container {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HireDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade.GradeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role.RoleName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade.GradeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.RoleName)
                    </td>
                    <td>
                        <button onclick="location.href='@Url.Action("Edit", "Users",new { id=item.UserID })'" class="btn">Update</button>
                    </td>
                </tr>
               

            }


        </table>
        <p class="button-container">

            <button onclick="location.href='@Url.Action("Create", "Users")'" class="btn">Create New</button>
            <button onclick="location.href='@Url.Action("AdminDashboard", "Navigation")'" class="btn">Go Back</button>



        </p>
    </div>
</body>
</html>