@model Timexis_1.Models.User

@{ ViewBag.Title = "Create"; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        /* Center the form */
        body {
            background-image: url('../../Image/background-realistic-abstract-technology-particle_23-2148431735 2.jpg');
            font-family: Argent CF;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2; /* Fallback color */
            padding-top: 50px; /* Adjust top padding for better visibility */
        }

        /* Style for form */
        .form-horizontal {
            width: 80%; /* Adjust width for better responsiveness */
            max-width: 600px; /* Set maximum width to prevent stretching on larger screens */
            margin: 0 auto;
            padding: 25px;
            color: cornsilk;
            font-family: Argent CF;
            box-shadow: 10px 10px 20px 10px rgba(0.7, 0.7, 0.7, 0.7);
            background: linear-gradient(to right, rgb(50 0 116 / 0.78), rgb(242 0 123 / 0.70)) no-repeat;
            background-size: cover; /* Ensure background covers the entire element */
            transition: box-shadow 0.3s ease;
        }

        /* Style for form labels */
        .control-label {
            color: cornsilk;
            font-weight: bold;
            font-family: Argent CF;
        }

        /* Style for form inputs */
        .form-control {
            width: 100%; /* Adjust width to fill the container */
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        /* Style for validation messages */
        .text-danger {
            color: #dc3545; /* Red color for error messages */
            font-size: 12px;
        }

        /* Style for submit button */
        .btn-default {
            background-color: #03ba82; /* Blue color for the button */
            color: #fff; /* White text color */
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 10px; /* Add some space at the top */
        }

            /* Hover effect for button */
            .btn-default:hover {
                background-color: #AD88C6; /* Darker blue color on hover */
            }

        /* Media query for smaller screens */
        media screen and (max-width: 768px) {
            .form-horizontal

        {
            width: 90%; /* Adjust width for smaller screens */
        }
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>User</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleID, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("RoleID", null, "Select Role", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GradeID, "Grade", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("GradeID", null, "Select Grade", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GradeID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
