@{ ViewBag.Title = "Home Page"; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Timexis</title>

    <!-- Custom CSS -->
    <style>
        /* Add your custom styles here */
        body {
            font-family: 'Poppins', sans-serif;
            background-image: url('/Image/background_Index 1.jpg'); /* Replace 'path_to_your_background_image.jpg' with the actual path to your background image */
            background-size: cover;
            background-position: center;
            padding-top: 70px; /* Adjusted to account for navbar height */
            margin: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .welcome-section {
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-bottom: 50px;
        }

        .welcome-text {
            font-family: 'Pacifico', cursive;
            font-size: 48px;
            color: #333;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin-right: px; /* Adjusted margin */
        }

            .welcome-text img {
                max-width: 250px; /* Adjust the width of the logo */
                height: auto; /* Maintain aspect ratio */
                margin-right: 5px; /* Adjusted margin */
            }

        .welcome-subtext {
            font-size: 18px;
            color: #666;
            margin-bottom: 30px;
        }

        .btn-container {
            text-align: right;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-left: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .side {
            display: flex;
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <!-- Welcome Section -->
    <div class="container welcome-section side">
        <div class="welcome-text">
            Welcome to
            <img src="~/Image/logo.png">
        </div>
    </div>

    <!-- Sign-in Buttons -->
    <div class="container btn-container">
        <a href="@Url.Action("Create", "Users")" class="btn">SignUp</a>
        <a href="@Url.Action("Login", "Account")" class="btn">Login</a>

    </div>

    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Pacifico&display=swap">

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>




