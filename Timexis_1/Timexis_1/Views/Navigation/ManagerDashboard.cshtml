
@model Timexis_1.Models.User


@{ ViewBag.Title = "ManagerDashboard"; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body, html {
            height: 100%;
        }

        body {
            font-family: Argent CF;
            background-image: url('../../Image/background_Index 1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2;
            margin: 0;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        .dashboard-content {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 10px 10px 20px 10px rgba(0.2, 0.2, 0.2, 0.2);
            background: linear-gradient(to right, rgb(50 0 116 / 0.78), rgb(24 190 197)) no-repeat;
            background-size: cover;
            transition: box-shadow 0.6s ease;
            display: flex;
            flex-direction: column; /* Align items vertically */
            align-items: center; /* Center items horizontally */
        }
        .card {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
            border-radius: 5px 0px 5px 0px;
            box-shadow: 0 4px 0px 8px rgb(68 36 88 / 0.20);
            transition: box-shadow 0.3s ease;
            background-color: rgb(9 94 153);
            text-align: center;
        }
            .card:hover {
                box-shadow: 1px 0px 1px 0px rgb(146 103 185 / 0.40);
            }

        h2 {
            color: cornsilk;
            text-align: center;
            margin-bottom: 10px;
        }

        hr {
            border: none;
            border-top: 1px solid #ccc;
            margin: 5px;
        }

        h3 {
            color: #03ba82;
            margin-bottom: 10px;
            cursor: pointer;
           
        }
            h3:hover {
                text-decoration: none;
                color: cornsilk;
            }


        a {
            text-decoration: none;
            color: #49425e;
        }

            a:hover {
                text-decoration: underline;
            }

        div.content-section {
            margin-bottom: 10px;
width:50%;
        }
            div.content-section p {
                color: #666;
                margin-bottom: 10px;
            }
                div.content-section p:last-child {
                    margin-bottom: 0;
                }

                div.content-section p span {
                    font-weight: bold;
                }
            div.content-section a {
                color: #543a65;
                text-decoration: none;
            }

                div.content-section a:hover {
                    text-decoration: underline;
                    background-color: #49425e; /* Change to your desired hover background color */
                    box-shadow: 10px 10px rgba(0.3, 0.3, 0.3, 0.3); /* Add a box shadow when hovering */
                }

        /* Style for submit button */
        .btn-default {
            background-color: rgb(9 94 153); /* Blue color for the button */
            color: #fff; /* White text color */
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            margin-right: auto;
            margin-top: 10px;
        }

            .btn-default:hover {
                background-color: #ccc; /* Darker blue color on hover */
            }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="dashboard-content">
            <h2>Welcome To Manager Dashboard</h2>
            <hr />
            <!-- Add content for approved attendance -->
            <div class="content-section card">
                <a href="@Url.Action("ApproveAttendence", "Attendances")">
                    <h3>Approved Attendance</h3>
                </a>
            </div>

            <!-- Add content for employee project assignment -->
            <div class="content-section card">
                <a href="@Url.Action( "EmployeesAssignedToProject", "Projects")">
                    <h3>Employee Project Assignment</h3>
                </a>
            </div>
            <div class="content-section card">
                <a href="@Url.Action( "PendingRequests", "LeaveRequests")">
                    <h3>Approve Leave </h3>
                </a>
            </div>
        </div>
    }


    <div class="text-center">
        <a href="@Url.Action("CommonDasboardAfterLogin", "Users")" class="btn btn-primary">Go Back</a>
    </div>


</body>
</html>


