
@model Timexis_1.Models.User


@{ ViewBag.Title = "ManagerDashboard"; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body, html {
            height: 100%;
        }

        body {
            font-family: Argent CF;
            background-image: url('../../Image/background-realistic-abstract-technology-particle_23-2148431735 2.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2;
            margin: 0;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        .dashboard-content {
            width: 80%;
            max-width: 500px;
            margin: 50px auto;
            padding: 5px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 10px 10px 20px 10px rgba(0.2, 0.2, 0.2, 0.2);
            background: linear-gradient(to right, rgb(50 0 116 / 0.78), rgb(242 0 123 / 0.70)) no-repeat;
            background-size: cover;
            transition: box-shadow 0.6s ease;
        }

        h2 {
            color: cornsilk;
            text-align: center;
            margin-bottom: 20px;
        }

        hr {
            border: none;
            border-top: 1px solid #ccc;
            margin: 10px 0;
        }

        h3 {
            color: #03ba82;
            margin-bottom: 1px;
            cursor: pointer;
            display: flex;
            flex-direction: column;
        }

           

        a {
            text-decoration: none;
            color: #03ba82;
        }

            a:hover {
                text-decoration: underline;
            }

        div.content-section {
            margin-bottom: 10px;
            margin-left: 25%;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            div.content-section a {
                display: block; /* Display links as block elements */
                padding: 10px 0; /* Add padding to space out the links */
                color: #03ba82;
                text-decoration: none;
            }

                div.content-section a:hover {
                    text-decoration: underline;
                    background-color: #9deafc; /* Change to your desired hover background color */
                    box-shadow: 10px 10px rgba(0.3, 0.3, 0.3, 0.3); /* Add a box shadow when hovering */
                }


        div.back-link {
            text-align: center;
            margin-top: 20px;
        }

            div.back-link a {
                color: #03ba82;
                text-decoration: none;
            }

                div.back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="dashboard-content">
        <h2>Welcome To Manager Dashboard</h2>
        <hr />
        <!-- Add content for approved leave -->
        <div class="content-section">
            <a href="@Url.Action("ApprovedLeave", "Leave")">
                <h3>Approved Leave</h3>
            </a>
        </div>

        <!-- Add content for approved attendance -->
        <div class="content-section">
            <a href="@Url.Action("ApproveAttendence", "Attendances")">
                <h3>Approved Attendance</h3>
            </a>
        </div>

        <!-- Add content for employee project assignment -->
        <div class="content-section">
            <a href="@Url.Action( "EmployeesAssignedToProject", "Projects")">
                <h3>Employee Project Assignment</h3>
            </a>
        </div>
        <div class="content-section">
            <a href="@Url.Action( "PendingRequests", "LeaveRequests")">
                <h3>Approve Leave </h3>
            </a>
        </div>
    </div>
    }

    @*<li>@Html.ActionLink("Employees Assigned To Project", "EmployeesAssignedToProject", "Projects")</li>*@

    <div>
        @Html.ActionLink("Back to Users", "CommonDashboardAfterLogin", "", null, new { @class = "btn btn-default", style = "margin-left: 10px;" })
    </div>

</body>
</html>


