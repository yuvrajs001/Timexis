<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Application</title>
    <style>
        .container {
            margin: 20px;
        }

        .box-container {
            display: flex;
            justify-content: center; /* Center the box container horizontally */
        }

        .box {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px; /* Add margin to create space between the box container and other elements */
            width: 300px; /* Adjust the width of the box as needed */
            background-color: #f9f9f9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add shadow effect */
        }

        .box-title {
            text-align: center;
            margin-bottom: 15px; /* Add space between the title and the list */
        }

        .nav {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .nav li {
                margin-bottom: 10px;
            }

            .nav a {
                text-decoration: none;
                color: #333;
                font-weight: bold;
            }

                .nav a:hover {
                    color: #007bff; /* Change color on hover */
                }

        .profile-container {
            text-align: center;
            margin-top: 20px;
        }
        .side{
            display:flex
        }
    </style>
</head>
<body>
    <div class="side">
        <div class="container">
            <div class="header">
                <div class="box-container">
                    <div class="box">
                        <h5 class="box-title">Project Actions</h5>
                        <ul class="nav">
                            <li>@Html.ActionLink("All Projects", "Index", "Projects")</li>
                            <li>@Html.ActionLink("Create Project", "Create", "Projects")</li>
                            <li>@Html.ActionLink("Assign Project", "AssignProject", "Projects")</li>
                            <li>@Html.ActionLink("Employees Assigned To Project", "EmployeesAssignedToProject", "Projects")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="header">
                <div class="box-container">
                    <div class="box">
                        <h5 class="box-title">User Actions</h5>
                        <ul class="nav">
                            <li>@Html.ActionLink("All User", "Index", "Users")</li>
                            <li>@Html.ActionLink("Create User", "Create", "Users")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="profile-container">
        <a href="@Url.Action("Details", "Users")">Profile</a>
    </div>

    <footer>
        <!-- Footer content -->
    </footer>

    <!-- Your scripts -->
</body>
</html>
