<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Application</title>
    <style>
        body {
            background-image: url('../../Image/background_Index 1.jpg');
            height: 100vh;
        }
        .container {
            margin-top: 20px;

        }

        .box-container {
            display: flex;
            justify-content: center; /* Center the box container horizontally */
            margin-top:30px;
        }

        .box {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px; /* Add margin to create space between the box container and other elements */
            width: 300px; /* Adjust the width of the box as needed */
            box-shadow: 1px 1px 2px 1px rgba(0.2, 0.2, 0.2, 0.2);
            background: rgb(5 144 199);
        }

        .box-title {
            text-align: center;
            margin-bottom: 15px; /* Add space between the title and the list */
        }

        .nav {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .nav li {
                margin-bottom: 10px;
            }

            .nav a {
                text-decoration: none;
                color: #333;
                font-weight: bold;
            }

                .nav a:hover {
                    color: #007bff; /* Change color on hover */
                }

        .profile-container {
            text-align: center;
            margin-top: 20px;
        }
        .side{
            display:flex
        }
        .btn-profile {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .btn-profile:hover {
                background-color: #0056b3;
                text-decoration: none;
            }

    </style>
</head>
<body>
    <div class="profile-container">
        <a href="@Url.Action("Details", "Users",new { id=ViewBag.UserID})" class="btn-profile">Profile</a>
    </div>
    <div class="side">
        <div class="container">
            <div class="header">
                <div class="box-container">
                    <div class="box">
                        <h5 class="box-title">Project Actions</h5>
                        <ul class="nav">
                            <li>@Html.ActionLink("All Projects", "Index", "Projects")</li>
                            <li>@Html.ActionLink("Create Project", "Create", "Projects")</li>
                            <li>@Html.ActionLink("Assign Project", "AssignProject", "Projects")</li>
                            <li>@Html.ActionLink("Employees Assigned To Project", "EmployeesAssignedToProject", "Projects")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="header">
                <div class="box-container">
                    <div class="box">
                        <h5 class="box-title">User Actions</h5>
                        <ul class="nav">
                            <li>@Html.ActionLink("All User", "Index", "Users")</li>
                            <li>@Html.ActionLink("Approve User", "Approve", "Users")</li>
                            <li>@Html.ActionLink("Create User", "Create", "Users")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <!-- Footer content -->
    </footer>

    <!-- Your scripts -->
</body>
</html>
