
@model Timexis_1.Models.EmployeeProjectAssignment
@{ ViewBag.Title = "AssignProject"; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Argent CF;
            background-image: url('../../Image/background_Index 1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2; /* Fallback color */
            padding-top: 50px; /* Adjust top padding for better visibility */
            margin-top: 40px;
            height: 100vh;
        }
.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
}

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
            margin: auto;
        }
        /* Style for validation messages */
        .text-danger {
            color: #dc3545; /* Red color for error messages */
            font-size: 12px;
        }
        /* Style for form */
        .form-horizontal {
            width: 80%; /* Adjust width for better responsiveness */
            max-width: 600px; /* Set maximum width to prevent stretching on larger screens */
            margin: 0 auto;
            padding: 25px;
            color: cornsilk;
            font-family: Argent CF;
            box-shadow: 10px 10px 20px 10px rgba(0.7, 0.7, 0.7, 0.7);
            background: linear-gradient(to right, rgba(50, 0, 116, 0.78), rgba(18 163 180)) no-repeat;
            background-size: cover; /* Ensure background covers the entire element */
            transition: box-shadow 0.3s ease;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #03ba82; /* Blue color for the button */
            color: #fff; /* White text color */
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 10px; /* Add some space at the top */
            margin-left: 120px;
        }

.btn-primary:hover {
    background-color: #0056b3;
}

media screen and (max-width: 768px) {
    .form-group {
        width: 90%;
        margin: 0 auto;
    }
}
        h3 {
            margin-left: 30%;
            font-weight: bold;
        }

    </style>
    </head>
<body>
    <div class="form-horizontal">
<h3>AssignProject</h3>

@using (Html.BeginForm("AssignProject", "Projects", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Employee:")
        @Html.DropDownList("employeeList", ViewBag.EmployeeList as SelectList, "Select Employee", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Project:")
        @Html.DropDownList("projectList", ViewBag.ProjectList as SelectList, "Select Project", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Assign Project</button>
}
        </div>
    </body>
</html>
