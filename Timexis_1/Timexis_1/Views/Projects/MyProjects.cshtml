@model List<Timexis_1.Models.Project>

@{
    ViewBag.Title = "My Projects";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
    /* Same CSS as provided previously */
        body {
            font-family: Argent CF;
            background-image: url('../../Image/background_Index 1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #f2f2f2; /* Fallback color */
            padding-top: 50px; /* Adjust top padding for better visibility */
            margin-top: 40px;
        }

h2 {
    text-align: center;
    margin-bottom: 20px;
}

.table {
    width: 80%;
    margin: 0 auto;
    border-collapse: collapse;
}

.table th,
.table td {
    border: 1px solid #ddd;
    padding: 8px;
}

.table th {
    background-color: #007bff;
    color: #fff;
    font-weight: bold;
    text-align: left;
}

.table tbody tr:hover {
    background-color: #f2f2f2;
}

.p {
    text-align: center;
    font-size: 18px;
    font-weight: bold;
}

media screen and (max-width: 768px) {
    .table {
        width: 90%;
    }
}

    </style>
</head>
<body>

    <h2>My Projects</h2>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Description</th>
                    <!-- Add more columns as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.ProjectName</td>
                        <td>@project.Description</td>
                        <!-- Add more columns as needed -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No projects assigned to you.</p>
    }
</body>
</html>