@model Timexis_1.Models.EmployeeProjectAssignment

@{
    ViewBag.Title = "Details";
}

<div class="profile-details">
    <h2> @ViewBag.UserFullName</h2>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    else
    {
        <p>Project Name: @ViewBag.ProjectName</p>
        <p>Assignment Date: @ViewBag.AssignmentDate</p>
    }

</div>

<div class="text-center">
    <a href="@Url.Action("CommonDasboardAfterLogin", "Users")" class="btn btn-primary">Go Back</a>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-image: url('../../Image/background_Index 1.jpg');
        background-size: cover;
        background-position: center;
        padding-top: 70px;
        margin: 0;
    }

    .profile-details {
        max-width: 800px;
        margin: 50px auto;
        background-color: #2c3e50;
        color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        position: relative;
        overflow: hidden;
        transition: box-shadow 0.3s ease-in-out;
    }

        .profile-details:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

    dl {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
    }

    dt {
        font-weight: bold;
        margin-top: 10px;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    .text-center {
        text-align: center;
        margin-top: 30px;
    }

        .text-center a {
            color: #18bc9c;
            text-decoration: none;
            padding: 10px 20px;
            border: 1px solid #18bc9c;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

            .text-center a:hover {
                background-color: #18bc9c;
                color: #2c3e50;
                text-decoration: none;
                transform: translateY(-2px);
            }
</style>
